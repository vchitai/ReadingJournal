<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:minHeight="72dp"
    android:elevation="3dp"
    android:padding="@dimen/basic_padding_small">
    <ImageView
        android:id="@+id/book_img"
        android:layout_width="@dimen/basic_button_size_medium"
        android:layout_height="@dimen/basic_button_size_medium"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/basic_padding_small"
        android:layout_marginStart="@dimen/basic_padding_small"
        android:layout_marginLeft="@dimen/basic_padding_small"
        android:layout_marginTop="@dimen/basic_padding_small"
        android:src="@drawable/bookopenflat" />

    <TextView
        android:id="@+id/book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/basic_padding_medium"
        android:layout_marginLeft="@dimen/basic_padding_medium"
        android:layout_toRightOf="@id/book_img"
        android:layout_toEndOf="@id/book_img"
        android:maxWidth="200dp"
        android:paddingTop="8dp"
        android:text="@string/title"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/book_auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_title"
        android:layout_marginBottom="@dimen/basic_padding_medium"
        android:layout_marginLeft="@dimen/basic_padding_medium"
        android:layout_marginStart="@dimen/basic_padding_medium"
        android:layout_toRightOf="@id/book_img"
        android:layout_toEndOf="@id/book_img"
        android:maxWidth="200dp"
        android:text="@string/author"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/basic_text_size_small" />

    <ImageView
        android:id="@+id/show_book"
        android:layout_width="@dimen/basic_button_size_small"
        android:layout_height="@dimen/basic_button_size_small"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingEnd="@dimen/basic_padding_small"
        android:paddingStart="@dimen/basic_padding_small"
        android:paddingRight="@dimen/basic_padding_small"
        android:src="@drawable/ic_action_next_item"
        android:tint="@android:color/black" />

    <ImageView
        android:id="@+id/finished"
        android:layout_width="@dimen/basic_button_size_small"
        android:layout_height="@dimen/basic_button_size_small"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/show_book"
        android:layout_toLeftOf="@id/show_book"
        android:paddingEnd="@dimen/basic_padding_small"
        android:paddingStart="@dimen/basic_padding_small"
        android:paddingRight="@dimen/basic_padding_small"
        android:src="@drawable/ic_action_accept"
        android:tint="@android:color/black" />
</RelativeLayout>